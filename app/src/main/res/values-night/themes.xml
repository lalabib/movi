<resources>
    <!-- Base application theme. -->
    <style name="Theme.Movi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_400</item>
        <item name="colorSecondaryVariant">@color/blue_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Movi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="search_view">
        <item name="android:background">@drawable/bg_search_corner_dark</item>
    </style>

    <style name="tv_color">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>